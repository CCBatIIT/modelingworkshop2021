{
    "theory": "qmmm",
    "_job_info": "choose either ener or opt",
    "job": "ener",
    "geom": {
        "ligand": "../TEV/ligand_short.pdb",
        "protein": "../TEV/protein2.pdb",
        "_qm_residues_info": "provide dict as [res_id] =  charge, Here, 'res_id' is given as 'res_nm + res_num'",
